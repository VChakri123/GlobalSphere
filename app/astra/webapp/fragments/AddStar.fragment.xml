<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateStarDialog"
        resizable="true"
        draggable="true"  
        contentWidth="20%"
        contentHeight="50%"
        title="Create Star"
        class="sapMPopover sapMIBar sapMHeader-CTX"
    >
        <beginButton>
            <Button
                id="idCreateButton"
                text="Create"
                press="onCreateStar"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idStarDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idIDLabel"
                    text="ID"
                />
                <Input
                    id="idIDInput"
                />
                <Label
                    id="idStarNameLabel"
                    text="StarName"
                />
                <Input
                    id="idStarNameInput"
                />
                <Label
                    id="idConstellationLabel"
                    text="Constellation"
                />
                <Input
                    id="idConstellationInput"
                />
                <Label
                    id="idTypeLabel"
                    text="Type"
                />
                <Input
                    id="idTypeInput"
                />
                <Label
                    id="idDescriptionLabel"
                    text="Description"
                />
                <Input
                    id="idDescriptionInput"
                />

            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>